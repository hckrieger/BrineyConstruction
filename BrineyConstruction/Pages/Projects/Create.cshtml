@page
@model BrineyConstruction.Pages.Projects.CreateModel
@{
    ViewData["Title"] = "Add photos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>It works!</h1>

<form enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row form-group">
        <input type="hidden" asp-for="Photo.PhotoId" />
        <div class="col-4">
            <label class="col-form-label">Category</label>
        </div>
        <div class="col-8">
            <input type="hidden" asp-for="Photo.CategoryId" />
            <select asp-for="Photo.Category" id="categories" class="form-control" name="categories">
                @if (Model.CategoryList.Count == 0)
                {
                    <option value="" selected disabled hidden>No categories</option>


                }
                else
                {
                    <option value="" selected disabled hidden>Choose Category</option>
                    foreach (var category in Model.CategoryList)
                    {
                        <option value="@category.Name.ToLower()">@category.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="Photo.Category" class="text-danger"></span>
            <br />
            <!-- Button to Open the Modal -->
            <button type="button" class="btn-sm btn btn-primary" data-toggle="modal" data-target="#myModal">
                Create Category
            </button>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-4">
            <label class="col-form-label">Upload Image</label>
        </div>
        <div class="col-8">
            <input type="file" asp-for="Photo.Name" id="image-file" name="filename">
            <span asp-validation-for="Photo.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-12">
            <input asp-page-handler="Photo" type="submit" value="Submit" style="margin-right: 0;" class="form-control offset-4 col-8 btn btn-primary" />
        </div>
    </div>
</form>

<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Create Category</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form enctype="multipart/form-data" method="post">
                
                <input type="hidden" asp-for="Category.CategoryId" />
                <!-- Modal body -->
                <div class="modal-body">

                    <div class="form-group row">
                        <div class="col-4">
                            Category
                        </div>
                        <div class="col-8">
                            <input type="text" asp-for="Category.Name" class="form-control" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer row form-group">
                        <div class="col-6">
                            <input asp-page-handler="Category" type="submit" class="btn btn-primary form-control" value="Create" />
                        </div>
                        <div class="col-5">
                            <input  type="button" class="btn btn-danger form-control" data-dismiss="modal" value="Close" />
                        </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
